<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_evenement_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/verical_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/verical_line"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/verical_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_down_arrow_1_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name_evenement_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="-80dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@+id/verical_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/verical_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"/>

    <TextView
        android:id="@+id/end_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/verical_line"
        app:layout_constraintEnd_toEndOf="@id/verical_line"
        app:layout_constraintTop_toBottomOf="@id/verical_line"
        app:layout_constrainedWidth="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>